<Window x:Class="QuantTrading.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CIB - Portfolio Monitor (Real-Time)" Height="450" Width="800"
        Background="#1E1E1E" Foreground="White">

    <Window.Resources>
        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ChangeDirection}" Value="Up">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                From="#2ECC71" To="Transparent" Duration="0:0:0.7"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding ChangeDirection}" Value="Down">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                From="#E74C3C" To="Transparent" Duration="0:0:0.7"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="OPTIONS MONITOR - REAL-TIME GREEKS" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Options}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Background="#252526" 
                  RowBackground="#252526" 
                  Foreground="White"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="*"/>
                <DataGridTextColumn Header="Spot" Binding="{Binding SpotPrice, StringFormat={}{0:N4}}" Width="*"/>
                <DataGridTextColumn Header="Option Price" Binding="{Binding OptionPrice, StringFormat={}{0:N4}}" Width="*"/>
                <DataGridTextColumn Header="Delta (Δ)" Binding="{Binding Delta, StringFormat={}{0:N4}}" Width="*"/>
                <DataGridTextColumn Header="Vega (ν)" Binding="{Binding Vega, StringFormat={}{0:N4}}" Width="*"/>
                <DataGridTextColumn Header="Last Update" Binding="{Binding LastUpdate, StringFormat={}{0:HH:mm:ss.fff}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>